<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    android:backgroundTint="@color/teal_700"
    tools:context=".DollarActivity">

    <EditText
        android:id="@+id/EditTextDollar"
        android:layout_width="245dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:hint="Enter amount...."
        android:inputType="numberDecimal"
        android:textColorHint="@color/purple_700"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/DollarTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.374"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DollarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:hint="Amount converted"
        android:textColorHint="#E40E0E"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/DollarEuroButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextDollar" />

    <Button
        android:id="@+id/DollarEuroButton"
        android:layout_width="193dp"
        android:layout_height="49dp"
        android:layout_marginBottom="61dp"
        android:text="Dollar to Euro"
        app:layout_constraintBottom_toTopOf="@+id/EuroDollarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DollarTextView" />

    <Button
        android:id="@+id/EuroDollarButton"
        android:layout_width="188dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="170dp"
        android:background="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:text="Euro to Dollar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/DollarEuroButton"
        app:layout_constraintTop_toBottomOf="@+id/DollarEuroButton" />

</androidx.constraintlayout.widget.ConstraintLayout>